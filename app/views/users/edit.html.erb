<% provide(:title, "Edit user") %>
<% provide(:button_text, "Save changes") %>
<h1> Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar-edit" style="margin-top: 20px">
      <%= gravatar_for @user, class: "gravatar_edit"%>
      <a href="https://gravatar.com/emails" target="_blank" class="change_gravatar" rel="noopener">Change your gravatar here!</a>
    </div>
  </div>
</div>